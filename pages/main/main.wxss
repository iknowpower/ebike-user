  text-align:center;
}

.main_sacan_text{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}

.main_location{
  position: absolute;
  left:4%;
  top:82%;
}

.main_msg{
  position: absolute;
  left:86%;
  top:40%;
}

.main_cust{
  position: absolute;
  left:86%;
  top:48%;
}

.main_tsjy{
  position: absolute;
  left:86%;
  top:56%;
}

.main_help{
  position: absolute;
  left:86%;
  top:64%;
}

.main_bottom{
  position: absolute;
  left:0;
  bottom:0;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #939393;
  padding:20rpx 98rpx;
  box-sizing: border-box;
}

.page-tip{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #777777;
  padding:20rpx 0;
  box-sizing: border-box;
}

.tip-czimg{
  margin-right:5rpx;
  width:34rpx;
  height:34rpx;
  border-radius: 50%;
