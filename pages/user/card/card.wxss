}

.bd-btn {
  position: absolute;
  bottom: 0rpx;
  background-color: white;
  width: 100%;
  height: 98rpx;
  color: #24C672;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
}

.item_tip {
  display: flex;
