@import "/style/back.wxss";
.page {
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  font-size:26rpx;
}

.map{
  width: 100vw;
  height: 100vh;
}

.cdxx_panel{
  position: absolute;
  left:3vw;
  top:20rpx;
  padding:0 35rpx;
  box-sizing: border-box;
}

.cdxx_txt{
  font-size: 32rpx;
  color: #FFFFFF;
}

.dev_back{
  background: #FFFFFF;
  border-radius: 20rpx;
  width:94vw;
}

.dev_panel{
  position: absolute;
  left:3vw;
  top:140rpx;
  padding:5rpx 35rpx 25rpx 20rpx;
  box-sizing: border-box;
}

.back_icon{
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.3);
  border-radius: 7rpx;
}

.btn{
  width: 70rpx;
  height: 70rpx;
  opacity: 0;
}

.main_scan{
  position: absolute;
  left:25vw;
  bottom:20rpx;
  width:50vw;
}

