.title {
  margin: 20rpx 0 30rpx 30rpx;
}

.weui-flex {
  display: flex;
  margin-bottom: 30rpx;
}

.sel-img {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.weui-input {
  border: 1rpx solid #D8D8D8;
  border-radius: 4rpx;
  background-color: transparent;
  height: 58rpx;
  width: 300rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}

.yz_cell {
  margin: 20rpx 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5px 10px 0px rgba(10, 31, 51, 0.2);
  border-radius: 20rpx;
  padding: 19rpx 0rpx 15rpx 0rpx;
}

.bd-1 {
  margin: 11rpx 0rpx 0rpx 30rpx;
  font-size: 28rpx;
