.page {
	width: 100%;
	font-family: MicrosoftYaHei;
	font-size: 15px;
	color: #323232;
	margin: 0;
	background-color: rgba(255, 255, 255, 1);
}

.item-text {
	position: absolute;
	top: 0;
	height: 93vh;
	width: 100%;
	overflow: auto;
}

.item-text-sqxx {
	padding: 24rpx 22rpx;
	margin: 20rpx 14rpx;
	background: rgba(255, 255, 255, 1);
	border-radius: 4rpx;
}

.item-text-detail {
	height: 40rpx;
	line-height: 40rpx;
}

.item-text-detail2 {
	height: 40rpx;
	line-height: 40rpx;
}

.item-text-detail-l1 {
	float: left;
	width: 18%;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #434242;
}

.item-text-detail-l2 {
	float: left;
	width: 82%;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #777777;
}

.item-text-detail-l3 {
	float: left;
	width: 72%;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #777777;
}

.item-text-detail-l4 {
	display: flex;
	width: 10%;
}

.item-btn {
	position: fixed;
	bottom: 0;
	height: 50px;
	width: 100%;
	background: rgba(255, 255, 255, 1);
}

.item-btn-tsjy {
	float: left;
	width: 100%;
	text-align: center;
	height: 45rpx;
	font-size: 32rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 550;
	color: #333333;
	line-height: 50px;
}

.re-center {
	background-color: #FFFFFF;
	height: 92vh;
	overflow: hidden;
}

.nor-img {
	text-align: center;
	padding-top: 40%;
}

.nor-text {
	position: relative;
	top: 5%;
	text-align: center;
	font-size: 20px;
	color: #CCCCCC;
}

.mp_dialog {
	font-size: 32rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333333;
	line-height: 45rpx;

}

.mp_dialog_view {
	display: flex;
	justify-content: center;
	align-items: center;

}

.mp_dialog_view1 {
	justify-content: center;
	align-items: center;
	padding: 20rpx 60rpx;
}

.text_style {
	height: 37rpx;
	font-size: 26rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #666666;
	line-height: 37rpx;

}